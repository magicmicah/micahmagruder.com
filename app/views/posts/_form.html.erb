<div class="post-form">
<%= form_with(model: post, class: "form-grid") do |form| %>
  <% if post.errors.any? %>
    <div class="form-errors">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-field">
    <%= form.label :title %>
    <%= form.text_area :title, class: "text-input", rows: 2 %>
  </div>

  <div class="form-field">
    <%= form.label :body %>
    <%= form.rich_text_area :body, class: "trix-input" %>
  </div>

  <div class="form-field">
    <%= form.label :tag_names, "Tags (comma-separated)" %>
    <%= form.text_field :tag_names, value: @post.tags.map(&:name).join(", "), class: "text-input", placeholder: "ruby, rails, design" %>
  </div>

  <div class="form-field form-field--inline">
    <%= form.check_box :visible %>
    <%= form.label :visible %>
  </div>

  <div class="form-field">
    <%= form.label :published_on %>
    <%= form.date_field :published_on, value: form.object.published_on || Date.today, class: "text-input" %>
  </div>

  <div class="form-actions">
    <%= form.submit(form.object.persisted? ? "Update post" : "Create post", class: "btn") %>
  </div>
<% end %>
</div>
