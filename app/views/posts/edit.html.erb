<% content_for :title, page_title("Editing - " + @post.title) %>

<div class="form-page">
  <div class="page-header">
    <div>
      <h1 class="page-title">Editing post</h1>
      <p class="page-subtitle">Tighten the copy, update the publish date, and polish details.</p>
    </div>
  </div>

  <%= render "form", post: @post %>

  <div class="page-actions">
    <%= link_to "Show this post", @post, class: "btn btn--ghost" %>
    <%= link_to "Back to posts", posts_path, class: "btn btn--ghost" %>
  </div>
</div>
