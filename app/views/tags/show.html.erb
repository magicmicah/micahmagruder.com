<% content_for :title, page_title("Home") %>

 <% if @posts.any? %>
  <div id="posts">
    <% @posts.each do |post| %>
      <div class='card'>
        <div class='post-content'>
          <%= render post %>
          <%= post.preview %>
          <br>
          <%= link_to 'Read More', post_path(post) %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
