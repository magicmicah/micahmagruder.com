<% content_for :title, page_title(@page.title) %>

<% if notice.present? %>
  <p class="notice"><%= notice %></p>
<% end %>

<article class="page">
  <header class="page-header">
    <h1><%= @page.title %></h1>
    <p class="page-updated">Last updated <%= time_ago_in_words(@page.updated_at) %> ago</p>
  </header>

  <div class="page-content">
    <%= @page.content %>
  </div>
</article>

<% if authenticated? %>
  <div class="page-actions">
    <%= link_to "Edit this page", edit_page_path(@page), class: "btn btn--ghost" %>
    <%= link_to "All pages", pages_path, class: "btn btn--ghost" %>
  </div>
<% end %>
